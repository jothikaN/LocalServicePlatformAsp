@model PostVM

<div class="container" style="margin-top:150px">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Create Post</h2>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-6 offset-md-3 border-1 border p-4">
            <form method="post" enctype="multipart/form-data">
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="@Model.Post.Name" class="form-label"></label>
                        <input asp-for="@Model.Post.Name" class="form-control" />
                        <span asp-validation-for="@Model.Post.Name"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="@Model.Post.ServiceId" class="form-label"></label>
                        <select asp-for="@Model.Post.ServiceId" asp-items="@Model.ServiceList" class="form-select">
                            <option disabled selected>--Select Service--</option>
                        </select>
                        <span asp-validation-for="@Model.Post.ServiceId"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.Post.ServiceCategoryId" class="form-label"></label>
                        <select asp-for="@Model.Post.ServiceCategoryId" asp-items="@Model.ServiceCategoryList" class="form-select">
                            <option disabled selected>--Select Service Category--</option>
                        </select>
                        <span asp-validation-for="@Model.Post.ServiceCategoryId"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="@Model.Post.ServiceType" class="form-label"></label>
                        <select asp-for="@Model.Post.ServiceType" asp-items="@Model.ServiceTypeList" class="form-select">
                        </select>
                        <span asp-validation-for="@Model.Post.ServiceType"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="@Model.Post.ServiceChargePerHour" class="form-label"></label>
                        <input asp-for="@Model.Post.ServiceChargePerHour" class="form-control" />
                        <span asp-validation-for="@Model.Post.ServiceChargePerHour"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-12">
                        <label asp-for="@Model.Post.ServiceImage" class="form-label"></label>
                        <input type="file" name="files" id="uploadBox" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-end">
                        <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-danger">Back</a>
                        <button type="submit" class="btn btn-success">Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
