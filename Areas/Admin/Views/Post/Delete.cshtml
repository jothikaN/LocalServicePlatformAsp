@model PostVM
<div class="container" style="margin-top:150px">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Edit Post</h2>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8 border-1 border p-4">
           
            <form method="post" enctype="multipart/form-data">
                <input asp-for="@Model.Post.Id" hidden/>
                <input asp-for="@Model.Post.ServiceImage" hidden/>
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.Name" class="form-label"></label>
                            <input asp-for="@Model.Post.Name" class="form-control" disabled/>
                            <span asp-validation-for="@Model.Post.Name"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.ServiceId" class="form-label"></label>
                            <select asp-for="@Model.Post.ServiceId" asp-items="@Model.ServiceList" class="form-select" disabled>
                                <option disabled selected>--Select Service--</option>
                            </select>
                            <span asp-validation-for="@Model.Post.ServiceId"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.ServiceCategoryId" class="form-label"></label>
                            <select asp-for="@Model.Post.ServiceCategoryId" asp-items="@Model.ServiceCategoryList" class="form-select" disabled>
                                <option disabled selected>--Select Service Category--</option>
                            </select>
                            <span asp-validation-for="@Model.Post.ServiceCategoryId"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.ServiceType" class="form-label"></label>
                            <select asp-for="@Model.Post.ServiceType" asp-items="@Model.ServiceTypeList" class="form-select" disabled>
                            </select>
                            <span asp-validation-for="@Model.Post.ServiceType"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Post.ServiceChargePerHour" class="form-label"></label>
                            <input asp-for="@Model.Post.ServiceChargePerHour" class="form-control" disabled />
                            <span asp-validation-for="@Model.Post.ServiceChargePerHour"></span>
                        </div>
                    </div>
                    <
                    <div class="col-md-12 text-end">
                        <div class="mb-3">
                            <a asp-area="Admin" asp-controller="Post" asp-action="Index" class="btn btn-danger">Back</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </form>
             <div class="col-md-4">
                @if (Model.Post.ServiceImage != null)
                {
                    <img src="@Model.Post.ServiceImage" width="100%"/>
                }

</div>
        </div>
    </div>
</div>



