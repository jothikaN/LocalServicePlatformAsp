@model List<Post>

<div class="container mt-5">
    <div class="card border-dark shadow bg-white rounded" style="margin-top:150px">
        <div class="card-header text-center text-uppercase">
            Services Post List
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h2 class="text-black-50"><i class="bi bi-balloon-heart"></i> Services Post List <i class="bi bi-balloon-heart"></i></h2>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="Admin" asp-controller="Post" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle-fill"></i> Create</a>
                </div>
            </div>
            <hr />
            @if (Model.Count() > 0)
            {
                <table class="table table-primary table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="text-center">Name</th>
                            <th class="text-center">Service</th>
                            <th class="text-center">Service Type</th>
                            <th class="text-center" style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Services.Name</td>
                                <td>@item.ServiceCategories.Name</td>
                                <td class="d-flex align-items-center justify-content-center">
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-controller="Post" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                        <a asp-area="Admin" asp-controller="Post" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-area="Admin" asp-controller="Post" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h2 class="text-center text-uppercase text-warning pt-4">Noooo Records guys!</h2>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="card-footer text-center">
            <a asp-area="Admin" asp-controller="Post" asp-action="Create" class="btn btn-success">Create New</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}
