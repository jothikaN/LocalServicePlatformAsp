@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}

<h1>Application roles</h1>
<div class="col-md-12 text-end" style="margin-top:150px">
    @* "text-end" would align the text to the right.*@

    <a asp-area="Admin" asp-controller="Roles" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle-fill"></i> Create</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.NormalizedName)</td>
                <td></td> <!-- You can add actions or buttons here if needed -->
            </tr>
        }
    </tbody>
</table>
