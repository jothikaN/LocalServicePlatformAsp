@model Services

<div class="container" style="margin-top:150px">
    <div class="card">
        <div class="card-header text-center text-uppercase">
            Service Details
        </div>
        <div class="card-body">
            <div class="row">

                <div class="col-md-8">
                    <div class=" row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Id</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">:@Model.Id</p>
                        </div>
                    </div>
                    <div class=" row">
                        <div class="col-md-4">
                            <p class="card-text text-uppercase"><strong>Service Title</strong></p>
                        </div>
                        <div class="col-md-8">
                            <p class="card-text">:@Model.Name</p>
                        </div>
                    </div>
                </div>
                <div class=" row">
                    <div class="col-md-4">
                        <p class="card-text text-uppercase"><strong>Description</strong></p>
                    </div>
                    <div class="col-md-8">
                        <p class="card-text">:@Model.Description</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <img src="@Model.ServicePic" width="100%" />
            </div>
        </div>

        <div class="mb-3">
            @*go to Back*@
            <a asp-area="Admin" asp-controller="Services" asp-action="Index" class="btn btn-warning">Back</a>
           

        </div>
    </div>
</div>