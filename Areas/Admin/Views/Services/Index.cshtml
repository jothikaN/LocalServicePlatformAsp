@model List<Services>

<div class="container" style="margin-top:150px">
    <div class="row mb-4">
     
        <div class=" text-uppercase">
         
            <h2 class="text-black-50 text-center " style="font-weight:bold;"><i class="bi bi-balloon-heart"></i>  Services List   <i class="bi bi-balloon-heart"></i></h2>
       
            <a asp-area="Admin" asp-controller="Services" asp-action="Create" class="btn btn-outline-success text-center" style="width:100px;"><i class="bi bi-plus-circle-fill"></i> Create</a>
        </div>
    </div>
    <hr />
    <br />
    <div class="tableContainer">
    @if (Model.Count() > 0)
    {


            <table class="table table-warning table-striped table-bordered" style="margin-left: 100px;">
                <thead>
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Description</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center" style="width: 40%;">@item.Name</td>
                            <td class="text-center" style="width: 40%;">@item.Description</td>
                            <td class="text-center align-middle">
                                <div class="btn-group" role="group">
                                    <a asp-area="Admin" asp-controller="Services" asp-action="Details" asp-route-id="@item.Id"
                                       class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                        <i class="bi bi-info-circle"></i>
                                    </a>
                                    <a asp-area="Admin" asp-controller="Services" asp-action="Edit" asp-route-id="@item.Id"
                                       class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-area="Admin" asp-controller="Services" asp-action="Delete" asp-route-id="@item.Id"
                                       class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        
    }
    else
    {

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning pt-4">Noooo Records guys!</h2>
                </div>
            </div>
        </div>


    }
    </div>
</div>
@*adding search data table // *@
@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}
