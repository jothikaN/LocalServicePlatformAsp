@model ServiceCategories

<div class="container" style="margin-top:150px">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center text-decoration-underline">Delete Service Type</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 border">
            <form method="post" enctype="multipart/form-data">

                <input asp-for="@Model.Id" hidden />
                @*multipart/form-data-To sore image*@
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">
                        @* Lable name like brand name ..we can acces through *@
                    </label>
                    <input asp-for="@Model.Name" class="form-control" />
                    @*validation ie showing the error to users*@


                </div>
              
                <div class="mb-3">
                    @*go to Back*@
                    <a asp-area="Admin" asp-controller="ServicesCategories" asp-action="Index" class="btn btn-warning">Back</a>
                    <button type="submit" class="btn btn-danger">Delete</button>

                </div>
            </form>
        </div>
        @* displaying img when updating *@
       

    </div>

</div>
