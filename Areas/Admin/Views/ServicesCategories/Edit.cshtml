@model ServiceCategories

<div class="container" style="margin-top:150px">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center text-decoration-underline">Edit Services Categories</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 border">
            <form method="post" enctype="multipart/form-data">
                @*multipart/form-data-To sore image*@
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">
                        @* Lable name like brand name ..we can acces through *@
                    </label>
                    <input asp-for="@Model.Name" class="form-control" />
                    @*validation ie showing the error to users*@
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>

                </div>
            
                <div class="mb-3">
                    @*go to Back*@
                    <a asp-area="Admin" asp-controller="ServicesCategories" asp-action="Index" class="btn btn-danger">Back</a>
                    <button type="submit" class="btn btn-warning">Update</button>

                </div>

            </form>
        </div>
      

    </div>

</div>
@*To avoid hit the server back*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
