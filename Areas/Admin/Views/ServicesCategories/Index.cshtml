@model List<ServiceCategories>
@*import model to get the list of brands*@
<div class="container" style="margin-top:150px">
    <div class="row mb-4">
        @*mb-4," where "mb" stands for margin-bottom, and "4" represents a spacing value.*@
        <div class="col-md-6 text-uppercase">
            @*"col-md-6" is indicating that the <div> should take up half (6 out of 12 columns) of the available width on medium-sized screens (md).*@
            <h2 class="text-black-50 "><i class="bi bi-balloon-heart"></i>  Services Types   <i class="bi bi-balloon-heart"></i></h2>

        </div>

        <div class="col-md-6 text-end">
            @* "text-end" would align the text to the right.*@

            <a asp-area="Admin" asp-controller="ServicesCategories" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle-fill"></i> Create</a>
        </div>
    </div>
    <hr />
    <div class="tableContainer">
    @if (Model.Count() > 0)
    {
            <table class="table table-success table-striped" style="margin-left: 100px;">
            <thead>
                <tr>
                  
                    <th class="text-center">Name</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @* getting from model*@
                @foreach (var item in Model)
                {
                    <tr>
                       
                        <td style="width: 60%;">@item.Name</td>
                        <td class="text-center align-middle">
                            <div class="btn-group" role="group">
                                @* navigating to details page using info icon *@
                                <a asp-area="Admin" asp-controller="ServicesCategories" asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-info" data-toggle="tooltip" data-placement="top" title="Details">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-area="Admin" asp-controller="ServicesCategories" asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-warning" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-area="Admin" asp-controller="ServicesCategories" asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-danger" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {

        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning pt-4">Noooo Records guys!</h2>
                </div>
            </div>
        </div>


    }
</div>
@*adding search data table // *@
@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}
