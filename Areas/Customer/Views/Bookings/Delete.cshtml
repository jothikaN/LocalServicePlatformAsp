@model BookingVM
<div class="container" style="margin-top:150px;">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-uppercase text-center">Cancel Your  Bookings</h2>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-8 border-1 border p-4">
   

            <form method="post" enctype="multipart/form-data">
                <input asp-for="@Model.Bookings.Id" hidden />
               
                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Bookings.Name" class="form-label"></label>
                            <input asp-for="@Model.Bookings.Name" class="form-control" disabled />
                            <span asp-validation-for="@Model.Bookings.Name"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Bookings.ServiceId" class="form-label"></label>
                            <select asp-for="@Model.Bookings.ServiceId" asp-items="@Model.ServiceList" class="form-select" disabled>
                                <option disabled selected>--Select Service--</option>
                            </select>
                            <span asp-validation-for="@Model.Bookings.ServiceId"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Bookings.ServiceCategoryId" class="form-label"></label>
                            <select asp-for="@Model.Bookings.ServiceCategoryId" asp-items="@Model.ServiceCategoryList" class="form-select" disabled>
                                <option disabled selected>--Select Service Category--</option>
                            </select>
                            <span asp-validation-for="@Model.Bookings.ServiceCategoryId"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Bookings.SType" class="form-label"></label>
                            <select asp-for="@Model.Bookings.SType" asp-items="@Model.ServiceTypeList" class="form-select" disabled>
                            </select>
                            <span asp-validation-for="@Model.Bookings.SType"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="@Model.Bookings.WType" class="form-label"></label>
                            <input asp-for="@Model.Bookings.WType" class="form-control" disabled />
                            <span asp-validation-for="@Model.Bookings.WType"></span>
                        </div>
                    </div>
                    
                    <div class="col-md-12 text-end">
                        <div class="mb-3">
                            <a asp-area="Customer" asp-controller="Bookings" asp-action="Index" class="btn btn-danger">Back</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                </div>
            </form>
           
        </div>
    </div>
</div>



