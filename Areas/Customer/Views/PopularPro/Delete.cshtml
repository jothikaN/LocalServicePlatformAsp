@model PopularPro

<div class="container" style="margin-top:150px">
    <div class="card">
        <div class="card-header text-center text-uppercase">
            Confirm Deletion
        </div>
        <div class="card-body">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Id" />

                <div class="alert alert-warning">
                    <p>Are you sure you want to delete the following record?</p>
                    <ul>
                        <li><strong>Service Title:</strong> @Model.ProName</li>
                        <li><strong>Description:</strong> @Model.PriceDescription</li>
                        <li><strong>Image:</strong> <img src="@Model.ProImage" width="100" /></li>
                    </ul>
                </div>

                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
