    <div class="container BookingFormcontainer">
        <div class="row justify-content-center">
            <div class="col-md-12">
                <h2 class="text-uppercase text-center mb-4">Update TaskersUpdate</h2>
            </div>
        </div>
        <div class="row mt-2 justify-content-center">
            <div class="col-md-12 form-container">
                <div class="form-section border p-4 rounded">
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="TaskersUpdate.Name" class="form-label"></label>
                            <input asp-for="TaskersUpdate.Name" class="form-control" />
                            <span asp-validation-for="TaskersUpdate.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaskersUpdate.Description" class="form-label"></label>
