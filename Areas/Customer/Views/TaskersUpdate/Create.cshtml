                            <span asp-validation-for="TaskersUpdate.Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaskersUpdate.PhoneNumber" class="form-label"></label>
                            <input asp-for="TaskersUpdate.PhoneNumber" class="form-control" />
                            <span asp-validation-for="TaskersUpdate.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaskersUpdate.Email" class="form-label"></label>
                            <input asp-for="TaskersUpdate.Email" class="form-control" />
                            <span asp-validation-for="TaskersUpdate.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaskersUpdate.Location" class="form-label"></label>
                            <select asp-for="TaskersUpdate.Location" asp-items="Model.LocationList" class="form-select">
                            </select>
                            <span asp-validation-for="TaskersUpdate.Location" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TaskersUpdate.ServiceId" class="form-label"></label>
                            <select asp-for="TaskersUpdate.ServiceId" asp-items="Model.ServiceList" class="form-select">
                            </select>
                            <span asp-validation-for="TaskersUpdate.ServiceId" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="TaskersUpdate.ServiceImage" class="form-label"></label>
                            <input type="file" name="files" id="uploadBox" class="form-control" />
                        </div>
                        <div class="row">
                            <div class="col-md-12 text-end">
                                <a asp-area="Customer" asp-controller="TaskersUpdate" asp-action="TaskerdetailShow" class="btn btn-danger">Back</a>
                                <button type="submit" class="btn btn-success">Create</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="image-section"></div>
            </div>
        </div>
    </div>
