@model LocalServicePlatform.Domain.ViewModel.TaskersUpdateVM

<div class="container">
    <div class="row mb-4">
        <div class="col-md-6 text-uppercase" style="margin-top:150px">
            <h2 class="text-black-50"><i class="bi bi-balloon-heart"></i> Taskers Update List <i class="bi bi-balloon-heart"></i></h2>
        </div>
    </div>
    <hr />
    @if (Model.TaskersUpdates.Count > 0)
    {
        <table class="table table-primary table-striped">
            <thead>
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Location</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Phone Number</th>
                    <th class="text-center">Email</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.TaskersUpdates)
                {
                    <tr>
                        <td width="20%">@item.Name</td>
                        <td width="20%">@item.Location</td>
                        <td width="30%">@item.Description</td>
                        <td width="20%">@item.PhoneNumber</td>
                        <td width="20%">@item.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2 class="text-center text-uppercase text-warning pt-4">No Records Found!</h2>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}
