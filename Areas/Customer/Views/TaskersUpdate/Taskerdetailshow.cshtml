@model List<LocalServicePlatform.Domain.Models.TaskersUpdate>
<style>
    .container {
     
        display: flex;
        justify-content: center;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: 1px solid navy;
        border-radius: 10px;
        width: 600px;
    }

    .card-header {
        background-color: navy;
        color: #fff;
        font-size: 1.5rem;
        font-weight: bold;
        padding: 20px;
        border-radius: 10px 10px 0 0;
        text-align: center;
    }

    .card-body {
        padding: 30px;
        text-align: left;
    }

    .card-text {
        font-size: 1rem;
        color: #333;
    }

    .card-text strong {
        color: #007bff;
    }

    .row.mb-2 {
        margin-bottom: 1rem;
    }

    img {
        border-radius: 10px;
        object-fit: cover;
    }

    hr {
        border-top: 1px solid #007bff;
    }

    .text-warning {
        color: #ffc107 !important;
    }

    .btn-warning {
        background-color: #ffc107;
        border: none;
        color: #333;
        padding: 10px 20px;
        font-size: 1rem;
        font-weight: bold;
        border-radius: 5px;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        color: #fff;
    }

</style>

<div class="container" style="margin-top:150px;">
    <div class="card">
        <div class="card-header text-center text-uppercase">
            Tasker Updates Details
        </div>
        <div class="card-body">
            @if (Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <div class="row mb-3">
                        <div class="col-md-8">
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <p class="card-text text-uppercase"><strong>Tasker Name</strong></p>
                                </div>
                                <div class="col-md-8">
                                    <p class="card-text">: @item.Name</p>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <p class="card-text text-uppercase"><strong>Main Service </strong></p>
                                </div>
                                <div class="col-md-8">
                                    <p class="card-text">: @item.Services.Name</p>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <p class="card-text text-uppercase"><strong>Location</strong></p>
                                </div>
                                <div class="col-md-8">
                                    <p class="card-text">: @item.Location</p>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <p class="card-text text-uppercase"><strong>Description</strong></p>
                                </div>
                                <div class="col-md-8">
                                    <p class="card-text">: @item.Description</p>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <p class="card-text text-uppercase"><strong>Phone Number</strong></p>
                                </div>
                                <div class="col-md-8">
                                    <p class="card-text">: @item.PhoneNumber</p>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-4">
                                    <p class="card-text text-uppercase"><strong>Email</strong></p>
                                </div>
                                <div class="col-md-8">
                                    <p class="card-text">: @item.Email</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(item.ServiceImage))
                            {
                                <img src="@item.ServiceImage" width="100%" />
                            }
                            else
                            {
                                <p>No image available</p>
                            }
                        </div>
                    </div>
                    <hr />
                }
            }
            else
            {
                <div class="row">
                    <div class="col-md-12">
                        <h2 class="text-center text-uppercase text-warning pt-4">No Records Found!</h2>
                    </div>
                </div>
            }
        </div>
        <div class="mb-3 text-center">
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-warning">Back</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('.table').DataTable();
    </script>
}
